
define seed  as 57576

include opls.playmol
include benzene.playmol
include co2.playmol

improper search

box         lengths 	50.0 50.0 50.0 #Angstrom

packmol     seed 	$seed
packmol     retry	0.95 
packmol     pack	mol(CO2) 1000 
packmol     pack	mol(C1)  10
packmol     action execute

write       lmp/models  box.lmp
write       pdb         box.pdb


